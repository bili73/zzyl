<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzyl.mapper.DeviceMapper">

    <resultMap id="BaseResultMap" type="com.zzyl.entity.Device">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="iot_id" property="iotId" jdbcType="VARCHAR"/>
        <result column="binding_location" property="bindingLocation" jdbcType="VARCHAR"/>
        <result column="location_type" property="locationType" jdbcType="INTEGER"/>
        <result column="physical_location_type" property="physicalLocationType" jdbcType="INTEGER"/>
        <result column="device_name" property="deviceName" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="product_key" property="productKey" jdbcType="VARCHAR"/>
        <result column="product_name" property="productName" jdbcType="VARCHAR"/>
        <result column="device_description" property="deviceDescription" jdbcType="VARCHAR"/>
        <result column="have_entrance_guard" property="haveEntranceGuard" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="create_by" property="createBy" jdbcType="BIGINT"/>
        <result column="update_by" property="updateBy" jdbcType="BIGINT"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, iot_id, binding_location, location_type, physical_location_type, device_name,
        nickname, product_key, product_name, device_description, have_entrance_guard,
        create_time, update_time, create_by, update_by, remark
    </sql>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM device
        WHERE id = #{id,jdbcType=BIGINT}
    </select>

    <select id="selectByIotId" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM device
        WHERE iot_id = #{iotId,jdbcType=VARCHAR}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM device
        ORDER BY id DESC
    </select>

    <select id="selectByPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM device
        <where>
            <if test="deviceName != null and deviceName != ''">
                AND device_name LIKE CONCAT('%', #{deviceName}, '%')
            </if>
            <if test="iotId != null and iotId != ''">
                AND iot_id = #{iotId}
            </if>
        </where>
        ORDER BY id DESC
    </select>

    <select id="selectByCondition" parameterType="com.zzyl.entity.Device" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM device
        <where>
            <if test="iotId != null and iotId != ''">
                AND iot_id = #{iotId}
            </if>
            <if test="deviceName != null and deviceName != ''">
                AND device_name LIKE CONCAT('%', #{deviceName}, '%')
            </if>
            <if test="nickname != null and nickname != ''">
                AND nickname LIKE CONCAT('%', #{nickname}, '%')
            </if>
            <if test="productKey != null and productKey != ''">
                AND product_key = #{productKey}
            </if>
            <if test="locationType != null">
                AND location_type = #{locationType}
            </if>
            <if test="physicalLocationType != null">
                AND physical_location_type = #{physicalLocationType}
            </if>
        </where>
        ORDER BY id DESC
    </select>

    <insert id="insert" parameterType="com.zzyl.entity.Device">
        INSERT INTO device
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="iotId != null">
                iot_id,
            </if>
            <if test="bindingLocation != null">
                binding_location,
            </if>
            <if test="locationType != null">
                location_type,
            </if>
            <if test="physicalLocationType != null">
                physical_location_type,
            </if>
            <if test="deviceName != null">
                device_name,
            </if>
            <if test="nickname != null">
                nickname,
            </if>
            <if test="productKey != null">
                product_key,
            </if>
            <if test="productName != null">
                product_name,
            </if>
            <if test="deviceDescription != null">
                device_description,
            </if>
            <if test="haveEntranceGuard != null">
                have_entrance_guard,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
            <if test="createBy != null">
                create_by,
            </if>
            <if test="updateBy != null">
                update_by,
            </if>
            <if test="remark != null">
                remark,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=BIGINT},
            </if>
            <if test="iotId != null">
                #{iotId,jdbcType=VARCHAR},
            </if>
            <if test="bindingLocation != null">
                #{bindingLocation,jdbcType=VARCHAR},
            </if>
            <if test="locationType != null">
                #{locationType,jdbcType=INTEGER},
            </if>
            <if test="physicalLocationType != null">
                #{physicalLocationType,jdbcType=INTEGER},
            </if>
            <if test="deviceName != null">
                #{deviceName,jdbcType=VARCHAR},
            </if>
            <if test="nickname != null">
                #{nickname,jdbcType=VARCHAR},
            </if>
            <if test="productKey != null">
                #{productKey,jdbcType=VARCHAR},
            </if>
            <if test="productName != null">
                #{productName,jdbcType=VARCHAR},
            </if>
            <if test="deviceDescription != null">
                #{deviceDescription,jdbcType=VARCHAR},
            </if>
            <if test="haveEntranceGuard != null">
                #{haveEntranceGuard,jdbcType=INTEGER},
            </if>
            <if test="createTime != null">
                #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updateTime != null">
                #{updateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="createBy != null">
                #{createBy,jdbcType=BIGINT},
            </if>
            <if test="updateBy != null">
                #{updateBy,jdbcType=BIGINT},
            </if>
            <if test="remark != null">
                #{remark,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.zzyl.entity.Device">
        UPDATE device
        <set>
            <if test="iotId != null">
                iot_id = #{iotId,jdbcType=VARCHAR},
            </if>
            <if test="bindingLocation != null">
                binding_location = #{bindingLocation,jdbcType=VARCHAR},
            </if>
            <if test="locationType != null">
                location_type = #{locationType,jdbcType=INTEGER},
            </if>
            <if test="physicalLocationType != null">
                physical_location_type = #{physicalLocationType,jdbcType=INTEGER},
            </if>
            <if test="deviceName != null">
                device_name = #{deviceName,jdbcType=VARCHAR},
            </if>
            <if test="nickname != null">
                nickname = #{nickname,jdbcType=VARCHAR},
            </if>
            <if test="productKey != null">
                product_key = #{productKey,jdbcType=VARCHAR},
            </if>
            <if test="productName != null">
                product_name = #{productName,jdbcType=VARCHAR},
            </if>
            <if test="deviceDescription != null">
                device_description = #{deviceDescription,jdbcType=VARCHAR},
            </if>
            <if test="haveEntranceGuard != null">
                have_entrance_guard = #{haveEntranceGuard,jdbcType=INTEGER},
            </if>
            <if test="createTime != null">
                create_time = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updateTime != null">
