    </select>

    <select id="selectByCondition" parameterType="com.zzyl.entity.DeviceData" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM device_data
        <where>
            <if test="iotId != null and iotId != ''">
                AND iot_id = #{iotId}
            </if>
            <if test="deviceName != null and deviceName != ''">
                AND device_name LIKE CONCAT('%', #{deviceName}, '%')
            </if>
            <if test="functionId != null and functionId != ''">
                AND function_id = #{functionId}
            </if>
            <if test="dataValue != null and dataValue != ''">
                AND data_value = #{dataValue}
            </if>
            <if test="startTime != null">
                AND create_time &gt;= #{startTime}
            </if>
            <if test="endTime != null">
                AND create_time &lt;= #{endTime}
            </if>
        </where>
        ORDER BY id DESC
    </select>

    <select id="selectByTimeRange" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM device_data
        WHERE iot_id = #{iotId,jdbcType=VARCHAR}
        <if test="startTime != null">
            AND create_time &gt;= #{startTime,jdbcType=TIMESTAMP}
        </if>
        <if test="endTime != null">
            AND create_time &lt;= #{endTime,jdbcType=TIMESTAMP}
        </if>
        ORDER BY create_time DESC
    </select>

